<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="@style/BaseAppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--tabBarItem的公共样式-->
    <style name="tabbar_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@drawable/tabbar_item_selector_title_color</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--新闻顶部标签字体-->
    <style name="NewsTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--新闻内容页底部视图的弹出框动画-->
    <style name="detail_popup_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

</resources>
