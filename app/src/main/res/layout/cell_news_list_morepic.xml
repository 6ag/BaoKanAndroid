<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_cell_news_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:maxLines="2"
        android:text="国家版权局等四部门通报5起典型网络文学侵权盗版案件"
        android:textColor="#262626"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/ll_news_list_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cell_news_list_title"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_cell_news_list_pic1"
            android:layout_width="0dp"
            android:layout_height="82dp"
            android:layout_weight="1"
            fresco:placeholderImage="@drawable/placeholder_logo"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_cell_news_list_pic2"
            android:layout_width="0dp"
            android:layout_height="82dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            fresco:placeholderImage="@drawable/placeholder_logo"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_cell_news_list_pic3"
            android:layout_width="0dp"
            android:layout_height="82dp"
            android:layout_weight="1"
            fresco:placeholderImage="@drawable/placeholder_logo"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_news_list_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_news_list_pic"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cell_news_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年08月24日"
            android:textColor="#BCBCBC"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:src="@drawable/news_list_comment"/>

        <TextView
            android:id="@+id/tv_cell_news_list_plnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="12"
            android:textColor="#BCBCBC"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:src="@drawable/news_list_look"/>

        <TextView
            android:id="@+id/tv_cell_news_list_onclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="2912"
            android:textColor="#BCBCBC"
            android:textSize="12sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/ll_news_list_bottom"
        android:layout_marginTop="12dp"
        android:alpha="0.5"
        android:background="#cccccc"/>

</RelativeLayout>